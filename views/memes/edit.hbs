<main class="max-w-lg mx-auto pt-10 pb-12 px-4 lg:pb-16">
  <form action="/memes/{{singleMeme._id}}/edit" method="POST">
    <div class="space-y-6">
      <div>
        <h1 class="text-lg leading-6 font-medium text-gray-900">Edit this meme</h1>
      </div>

      <div>
        <label for="name" class="block text-sm font-medium text-gray-700"> Name </label>
        <div class="mt-1">
          <input type="text" name="name" value="{{singleMeme.name}}" id="name" class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border-gray-300 rounded-md" placeholder="Meme's name">
        </div>
      </div>

      <div>
        <label for="name" class="block text-sm font-medium text-gray-700"> Image URL </label>
        <div class="mt-1">
          <input type="text" name="name" value="{{singleMeme.imageUrl}}" id="name" class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border-gray-300 rounded-md" placeholder="Meme's name">
        </div>
      </div>

      <div>
        <label for="about" class="block text-sm font-medium text-gray-700"> About </label>
        <div class="mt-1">
          <textarea id="about" name="about" value="{{singleMeme.about}}"  rows="3" class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border border-gray-300 rounded-md">{{singleMeme.about}}</textarea>
        </div>
      </div>

      <div>
        <label for="origin" class="block text-sm font-medium text-gray-700"> Origin </label>
        <div class="mt-1">
          <textarea id="origin" name="origin" value="{{singleMeme.origin}}" rows="3" class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border border-gray-300 rounded-md">{{singleMeme.origin}}</textarea>
        </div>
      </div>

      <div class="flex justify-end">
        <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-sky-500 hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">Add meme</button>
      </div>
    </div>
  </form>
</main>